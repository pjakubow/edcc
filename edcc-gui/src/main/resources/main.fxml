<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefWidth="400" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.simplewebapps.edcc.gui.MainController">

    <TabPane maxWidth="Infinity" AnchorPane.topAnchor="1" AnchorPane.leftAnchor="1" AnchorPane.rightAnchor="1">
        <Tab fx:id="messagesTab" closable="false" text="Messages">
            <VBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <!--<ListView fx:id="msgsList"></ListView>-->
                <TableView fx:id="msgsTable">
                    <columns>
                        <TableColumn text="Time" fx:id="timestampCol">
                            <cellValueFactory><PropertyValueFactory property="time" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="From">
                            <cellValueFactory><PropertyValueFactory property="from" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Message">
                            <cellValueFactory><PropertyValueFactory property="message" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Channel">
                            <cellValueFactory><PropertyValueFactory property="channel" /></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        <Tab fx:id="missionsTab" closable="false" text="Missions">
            <GridPane hgap="10.0" vgap="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                </children>
            </GridPane>
        </Tab>
    </TabPane>
</AnchorPane>
